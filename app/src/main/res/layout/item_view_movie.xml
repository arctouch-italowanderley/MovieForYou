<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/m_movie_image"
        android:layout_width="72dp"
        android:layout_height="128dp"
        android:layout_marginRight="@dimen/margin_between_elements_smallest_size"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_portrait" />

    <com.arctouch.wanderley.italo.movieforyou.ui.views.CustomTextView
        android:id="@+id/m_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_between_elements_smallest_size"
        android:layout_marginTop="@dimen/margin_between_elements_special_small_size"
        android:layout_toRightOf="@id/m_movie_image"
        android:text="@string/lipsum_movie_name"
        android:textSize="@dimen/text_biggest_size" />

    <com.arctouch.wanderley.italo.movieforyou.ui.views.CustomTextView
        android:id="@+id/m_movie_original_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_movie_title"
        android:layout_marginRight="@dimen/margin_between_elements_smallest_size"
        android:layout_marginTop="@dimen/margin_between_elements_special_small_size"
        android:layout_toRightOf="@id/m_movie_image"
        android:text="@string/lipsum_movie_name"
        android:textSize="@dimen/text_normal_size" />

    <com.arctouch.wanderley.italo.movieforyou.ui.views.CustomTextView
        android:id="@+id/m_movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_movie_original_title"
        android:layout_marginTop="@dimen/margin_between_elements_special_small_size"
        android:layout_toLeftOf="@id/m_movie_vote_average"
        android:layout_toRightOf="@id/m_movie_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/lipsum_movie_genres"
        android:textSize="@dimen/text_normal_size" />

    <com.arctouch.wanderley.italo.movieforyou.ui.views.CustomTextView
        android:id="@+id/m_movie_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/m_movie_original_title"
        android:layout_marginRight="@dimen/margin_between_elements_smallest_size"
        android:layout_marginTop="@dimen/margin_between_elements_special_small_size"
        android:text="@string/lipsum_movie_rate"
        android:textSize="@dimen/text_normal_size" />

</RelativeLayout>