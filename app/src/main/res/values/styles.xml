<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Button.Default" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/button_default</item>
    </style>

    <style name="AppTheme.Button.Default.Border" parent="AppTheme.Button.Default">
        <item name="android:textColor">@color/button_border</item>
    </style>
</resources>
